<title>My Todos</title>
<h1>Stuff I need to do.</h1>

<form action = "/todos" method = "post">
     <input type="text" name="description">
     <button>Add</button>
</form>

<ul>
   {{#todos}}
      <li> 
         <form action = "/todos/{{_id}}/completed" method = "post">
           {{description}} - {{done}}  <button type = "submit">Done</button>
         </form>
      </li>
   {{/todos}} 
</ul>

<h3>Done</h3>
<ul>
   {{#doneTodos}}
      <li> 
         <form action = "/todos/{{_id}}/completed" method = "post">
           {{description}} - {{done}}  <button type = "submit">Whoops!</button>
         </form>
      </li>
   {{/doneTodos}} 
</ul>


